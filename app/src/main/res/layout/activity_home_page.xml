<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D397C"
    tools:context=".admin.Home.HomePage">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="141dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <Button
            android:layout_width="130dp"
            android:layout_height="146dp"
            android:drawableTop="@drawable/ic_baseline_bed_24"
            android:drawableTint="#98A6F4"
            android:padding="20dp"
            android:text="Add Mentor"
            android:onClick="addMentorRegister"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="firstStrongLtr"
            android:textSize="21sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="156dp"
            android:drawableTop="@drawable/ic_baseline_bed_24"
            android:drawableTint="#98A6F4"
            android:padding="20dp"
            android:onClick="addCategory"
            android:text="Add Category"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="firstStrongLtr"
            android:textSize="21sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="146dp"
            android:drawableTop="@drawable/ic_baseline_bed_24"
            android:drawableTint="#98A6F4"
            android:padding="20dp"
            android:onClick="showCategories"
            android:text="All Categories"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="firstStrongLtr"
            android:textSize="21sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="141dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.351">

        <Button
            android:layout_width="130dp"
            android:layout_height="146dp"
            android:drawableTop="@drawable/ic_baseline_bed_24"
            android:drawableTint="#98A6F4"
            android:padding="20dp"
            android:text="Assign Events"
            android:onClick="assign_event"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="firstStrongLtr"
            android:textSize="21sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="146dp"
            android:drawableTop="@drawable/ic_baseline_bed_24"
            android:drawableTint="#98A6F4"
            android:padding="20dp"
            android:text="Bedroom"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="firstStrongLtr"
            android:textSize="21sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="146dp"
            android:drawableTop="@drawable/ic_baseline_bed_24"
            android:drawableTint="#98A6F4"
            android:padding="20dp"
            android:text="Bedroom"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="firstStrongLtr"
            android:textSize="21sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="269dp"
        android:layout_height="57dp"
        android:layout_marginTop="76dp"
        android:text="Welcome Home!"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>